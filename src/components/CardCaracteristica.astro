---
export interface Props {
  claseIcono: string;
  titulo: string;
  descripcion: string;
}

const { claseIcono, titulo, descripcion } = Astro.props;
---

<div class="mx-10 sm:mx-7 lg:my-7  max-w-sm mx-auto bg-white border border-blue-300 rounded-lg shadow-lg hover:shadow-2xl transition-shadow duration-300 overflow-hidden">
  <div class="p-6 text-center">
    <i class={`fas ${claseIcono} text-blue-300`} style="font-size: 5rem;"></i>
    <h1 class="mb-2 text-xl font-bold tracking-tight text-blue-500">
      {titulo}
    </h1>
    <p class="mb-3 font-normal text-gray-700">
      {descripcion}
    </p>
  </div>
</div>
