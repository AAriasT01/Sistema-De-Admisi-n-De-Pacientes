---
export interface Props {
  imgSrc: string;
  imgAlt: string;
  claseIcono: string;
  titulo: string;
  descripcion: string;
  linkHref: string;
}

const { imgSrc, imgAlt, claseIcono, titulo, descripcion, linkHref} = Astro.props;
---

<div class="max-w-sm mx-auto bg-white border border-blue-300 rounded-lg shadow-lg hover:shadow-2xl transition-shadow duration-300 overflow-hidden">
  <a href={linkHref} >
    <img src={imgSrc} alt={imgAlt} class="rounded-t-lg w-full h-48 object-cover">
  </a>
  <div class="p-6 text-center">
    <h1 class="mb-2 text-xl font-bold tracking-tight text-gray-900">
      <i class={`fas ${claseIcono}`}></i> {titulo}
    </h1>
    <p class="mb-3 font-normal text-gray-700">
      {descripcion}
    </p>
    <a href={linkHref} class="block text-blue-500 hover:underline">
      Más información
    </a>
  </div>
</div>
